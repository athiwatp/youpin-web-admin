extends components/layout

mixin reporter
  #reporter
    .slider
      ul.slides
    h5 Reported
    p by&nbsp;
      span
    p on&nbsp;
      span
    a.btn-flat Contact

mixin details
  #details
    h5 Description
    .input-field
      textarea.materialize-textarea
    h5 Category
    .chips.chips-initial
    h5 Location
    .chips.chips-initial
    h5 Tag
    .chips.chips-initial

append content
  #page-dashboard.page
    .container.content-padding
      h1.page-title Test
      a.btn(href='#manage-issue-modal') Manage Issue

  .modal#manage-issue-modal
    .modal-header
      .row
        .col.s6
          h3 Manage Issue
        .col.s6.right-align
          case user_role
            when "department_officer"
              a.btn-flat#reject Reject
              | &nbsp;
              a.btn-flat#resolve Resolve
            when "organization_admin"
            default
              //- a.btn-flat#reset Reset
              //- | &nbsp;
              a.btn-flat#cancel Cancel
              | &nbsp;
              a.btn#confirm Confirm
      .row
        .col.s12
          p
          .divider
    .modal-content
      .row
        .col.s12
          h4 ID&nbsp;
            span#id
      .row
        case user_role
          when 'department_officer'
            .col.s6
              h5 Details
              +reporter
              +details
            .col.s6#progress
              h5 Progress
              .input-field
                textarea.materialize-textarea
              .row
                .col.s8
                  .file-field.input-field
                    input(type='file', accept="image/*")
                    .file-path-wrapper
                      input.file-path.validate(type="text", placeholder="Upload photo")
                .col.s4.right-align
                  a.btn-flat#post Post
              #cards
          when 'organization_admin'
          default
            .col.s8
              .row
                .col.s6
                  +reporter
                .col.s6
                  +details
            .col.s4#status
              h5 Status
              .input-field
                select
                  option(value='verified') Verified
                  option(value='2') Test
              h5 Priority
              .input-field
                select
                  option(value='urgent') Urgent
                  option(value='2') Test
              h5 Department
              .input-field
                select
                  option(value='department1') Department 1
                  option(value='2') Department 2
              h5 Annotation
              .input-field
                textarea.materialize-textarea

